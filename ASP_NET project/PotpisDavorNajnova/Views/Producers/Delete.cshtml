@model Producer

@{
    ViewData["Title"] = "Delete Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation  for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfPicUrl" class="control-label"></label>
                        <input asp-for="ProfPicUrl" class="form-control" readonly />
                        <span asp-validation-for="ProfPicUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form>
                            <input type="hidden" asp-for="id" />
                            <input type="submit" value="Confirm " asp-action="Delete" asp-route-id="@Model.id" method="post" class="btn-outline-danger float-right" />

                        </form>     @*This  Delete becouse value we have in ACtionanme is dlete if we didnt have that we will go with DeleteConfirmed*@



                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfPicUrl").val();
        })


    </script>
} 