@model Cinema

@{
    ViewData["Title"] = "Details of the cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Cinemalogo" class="control-label"></label>
                    <input asp-for="Cinemalogo" class="form-control" readonly />
                    <span asp-validation-for="Cinemalogo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Disc" class="control-label"></label>
                    <input asp-for="Disc" class="form-control" readonly />
                    <span asp-validation-for="Disc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){

                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Cinemalogo").val();
        })
    </script>
}